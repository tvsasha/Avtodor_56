<Window x:Class="Avtodor_56.OneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Material" Height="250" Width="400">
    <Grid>
        <TextBox Name="txtID" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="20,20,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtName" HorizontalAlignment="Left" Height="23" Margin="20,60,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtUnit" HorizontalAlignment="Left" Height="23" Margin="20,100,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtUnitPrice" HorizontalAlignment="Left" Height="23" Margin="20,140,0,0" VerticalAlignment="Top" Width="120"/>
        
        <Button Content="Update" HorizontalAlignment="Left" Margin="200,20,0,0" VerticalAlignment="Top" Width="75" Click="Update_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="200,60,0,0" VerticalAlignment="Top" Width="75" Click="Delete_Click"/>
    </Grid>
</Window>